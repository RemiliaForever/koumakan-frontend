{
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "types": ["node"],
    "compilerOptions": {
        "strict": true,
        "jsx": "preserve",
        "jsxFactory": "h",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "strictFunctionTypes": false,
        "allowJs": true,
        "module": "esnext",
        "target": "es5",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "lib": [
            "dom",
            "es5",
            "es6",
            "es7",
            "es2015.promise"
        ],
        "sourceMap": true,
        "pretty": true
    }
}
